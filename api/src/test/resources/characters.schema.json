{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Loot API character Collection Schema",
  "description": "Schema for collections of characters in Loot API",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+(:[0-9]+)*((/[a-zA-Z0-9-]+)+|/)?$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "_embedded": {
      "type": "object",
      "properties": {
        "loot-api:character": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "number"
              },
              "name": {
                "type": "string"
              },
              "inventory": {
                "type": "array",
                "items": {
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                },
                "additionalProperties": false,
                "required": [
                  "name",
                  "quantity"
                ]
              },
              "_links": {
                "type": "object",
                "properties": {
                  "self": {
                    "$ref": "#/definitions/standardLink"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "self"
                ]
              }
            },
            "additionalProperties": false,
            "required": [
              "id",
              "name",
              "inventory",
              "_links"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "loot-api:character"
      ]
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "loot-api:campaign": {
          "$ref": "#/definitions/standardLink"
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "loot-api:campaign"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "_embedded",
    "_links"
  ]
}