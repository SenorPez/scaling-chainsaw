{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Loot API Error Schema",
  "description": "Schema for errors in Loot API",
  "type": "object",
  "properties": {
    "code": {
      "type": "integer"
    },
    "message": {
      "type": "string"
    },
    "detail": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "code",
    "message",
    "detail"
  ]
}